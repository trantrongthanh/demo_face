<nav class="navbar navbar-dark bg-dark">
    <a class="navbar-brand" href="#" style="margin-left: 17%;">Demo nhận diện khuôn mặt</a>
</nav>
<form>
    <div class="row" style="margin-top: 50px;">
        <div class="col-md-2"></div>
        <div class="col-md-8" id='widthImg'>
            <div class="form-group">
                <input type="text" name="link" class="form-control" id="link" placeholder="Nhập vào link ảnh">
            </div>
        </div>
        <div class="col-sm-2">
            <button type="submit" class="btn btn-primary" style="margin-left: 10px;">Tìm</button>
        </div>
    </div>


</form>
<div class="posts">
    <div class="row justify-content-center">
        <div class="col-md-8" style="margin-top: 50px;">
            <div class="card">

                <div class="source-image">
                    <img id='imageID' src="{{this.link}}" class="" alt="..." style="margin: 10px;">
                    {{#each this.result}}
                    <div class="idol-face" style="top:{{this.face.top}}px; left:{{this.face.left}}px;
                                                    width:{{this.face.width}}px; height:{{this.face.height}}px">
                        <span class="idol-name" style="" )}>{{this.person.name}}</span>
                    </div>
                    {{/each}}

                </div>
                <div class="card-body">
                    <h5 class="card-title">Kết quả</h5>
                    <ul class="list-group">
                        {{#each this.result}}
                        <li class="list-group-item"> <b>Person</b>
                        <li class="list-group-item">id: {{this.person.id}}</li>
                        <li class="list-group-item">name: {{this.person.name}}</li>
                        <li class="list-group-item">face:
                            <p>top: {{this.face.top}}</p>
                            <p>left: {{this.face.left}}</p>
                            <p>width: {{this.face.width}}</p>
                            <p>height: {{this.face.height}}</p>
                        </li>

                        {{#each this.candidates}}
                        <li class="list-group-item">Confident: {{this.confidence}}</li>
                        {{/each}}


                        </li>
                        {{/each}}

                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>