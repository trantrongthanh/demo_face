<form>
    <div class="row" style="margin-top: 20px;">
        <div class="col-md-2"></div>
        <div class="col-md-8" id='widthImg'>
            <div class="form-group">
                <input type="text" name="link" class="form-control" id="link" placeholder="Nhập vào link ảnh">

                <input type="text" id='widthInput' name="width" id="link" style="display: none;">
            </div>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary" style="margin-left: 10px;">Tìm</button>
            <script>
                var inform = '{{this.inform}}'
                if (inform.length > 0)
                    alert(inform)
            </script>
        </div>
    </div>


</form>
<div class="posts">
    <div class="row justify-content-center">
        <div class="col-md-8" style="margin-top: 50px;">
            <div class="card">

                <div class="source-image align-middle">
                    <img id='imageID' src="{{this.link}}" class="card-img-top" alt="...">
                    {{#each this.result}}
                    <span class="idol-name" style="position: absolute; top: {{this.inputTop}}px; left: {{this.inputLeft}}px;">
                        {{this.person.name}}
                    </span>
                    <div class="idol-face" style="top:{{this.face.top_new}}px; left:{{this.face.left_new}}px;
                                                    width:{{this.face.width_new}}px; height:{{this.face.height_new}}px">
                    </div>
                    {{/each}}
                </div>
                <div class="card-body">
                    <h4 class="card-title">Kết quả</h4>
                    <ul class="list-group">
                        {{#each this.result}}
                        <li class="list-group-item"> <b>Person</b>
                        <li class="list-group-item">name: {{this.person.name}}</li>
                        <li class="list-group-item">face:
                            <p>top: {{this.face.top_new}}</p>
                            <p>left: {{this.face.left_new}}</p>
                            <p>width: {{this.face.width_new}}</p>
                            <p>height: {{this.face.height_new}}</p>
                        </li>

                        {{#each this.candidates}}
                        <li class="list-group-item">Confident: {{this.confidence}}</li>
                        {{/each}}
                        </li>
                        {{/each}}

                    </ul>
                    <h4 class="card-title" style="margin-top: 20px;">Link test</h4>
                    <p class="list-group-item">https://storagecnm.blob.core.windows.net/mix/thanhandcanh.jpg
                    </p>
                    <p class="list-group-item">https://i.ytimg.com/vi/1MUu5tEHUlI/maxresdefault.jpg</p>
                </div>


            </div>
        </div>
    </div>
    <script>
        var image = document.getElementById('imageID')
        document.getElementById("widthInput").value = image.clientWidth;
    </script>
</div>